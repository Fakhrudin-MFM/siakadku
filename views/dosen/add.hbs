<section class="content-header">
  <h1>Data Mahasiswa</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>        
    <li class="active">Dashboard</li>
  </ol>
</section>
<!-- Main content-->
<section class="content">
  <!-- Your Page Content Here-->
  <!-- /.row-->
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Halo dunia</h3>
        </div>
        <!-- /.box-header-->
        <div class="box-body">
          <p>Welcome to {{title}}</p>

            <form class="form-horizontal">
            </form>


            <form class="form-horizontal" action="/dosen/add" method="POST">
              <div class="form-group">
                <label for="nidn" class="col-sm-3 control-label">Nidn</label>
                <div class="col-sm-7">
                  <input type="text" class="form-control" name="nidn">
                </div>
              </div>

              <div class="form-group">
                <label for="nama" class="col-sm-3 control-label">Nama</label>
                <div class="col-sm-7">
                  <input type="text" class="form-control" name="nama">
                </div>
              </div>

              <div class="form-group">
                <label for="gelar" class="col-sm-3 control-label">Gelar</label>
                <div class="col-sm-7">
                  <input type="text" class="form-control"  name="gelar">
                </div>
              </div>

              <div class="form-group">
                <label for="tanggal_lahir" class="col-sm-3 control-label">Tanggal Lahir</label>
                <div class="col-sm-7">
                  <input type="date" class="form-control" name="tanggal_lahir">
                </div>
              </div>

              <div class="form-group">
                <label for="sex" class="col-sm-3 control-label">Jenis Kelamin</label>
                <div class="col-sm-7">
                  <div class="radio">
                    <label><input type="radio" name="sex" value="L">Laki Laki</label>
                  </div>
                  <div class="radio">
                    <label><input type="radio" name="sex" value="P">Perempuan</label>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="tanggal_lahir" class="col-sm-3 control-label">Tahun Masuk</label>
                <div class="col-sm-7">
                  <input type="number" class="form-control" name="tahun_masuk">
                </div>
              </div>

              <div class="form-group">
                <label for="" class="col-sm-3 control-label">Program Studi</label>
                <div class="col-sm-7">
                  <select class="form-control" id="" name="idProgramStudi">
                    {{#each ps}}
                      <option value="{{id}}">{{nama_prodi}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="tanggal_lahir" class="col-sm-3 control-label">Pendidikan</label>
                <div class="col-sm-7">
                  <select class="form-control" id="" name="idPendidikan">
                    {{#each pendidikan}}
                      <option value="{{id}}">{{nama_pendidikan}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="tanggal_lahir" class="col-sm-3 control-label">User</label>
                <div class="col-sm-7">
                  <select class="form-control" id="" name="idUser">
                    {{#each user}}
                      <option value="{{id}}">{{username}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>


              <div class="form-group">
                <div class="col-sm-10">
                  <input type="submit" name="save" class="btn btn-primary pull-right" >
                </div>
              </div>

            </form>
        </div>
        <!-- /.box-body-->
      </div>
      <!-- /.box-->
    </div>
  </div>
</section>