<section class="content-header">
  <h1>Data Mahasiswa</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>        
    <li class="active">Dashboard</li>
  </ol>
</section>
<!-- Main content-->
<section class="content">
  <!-- Your Page Content Here-->
  <!-- /.row-->
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Halo dunia</h3>
        </div>
        <!-- /.box-header-->
        <div class="box-body">
          <p>Welcome to {{title}}</p>

            <form class="form-horizontal">
              <div class="form-group">
                <label for="npm" class="col-sm-3 control-label">NPM</label>
                <div class="col-sm-7">
                  <input type="text" class="form-control"  name="npm">
                </div>
              </div>
            </form>


            <form class="form-group" action="/mahasiswa/add" method="POST">
                <label for="npm">NPM</label>
                <input type="text" class="form-control"  name="npm">
                <label for="nama">Nama</label>
                <input type="text" class="form-control"  name="nama">
                
                <label for="tempat_lahir">Tempat Lahir</label>
                <input type="text" class="form-control"  name="tempat_lahir">               
                <label for="tanggal_lahir">Tanggal Lahir</label>
                <input type="date" class="form-control"  name="tanggal_lahir">

                <label for="sex">Jenis Kelamin</label>
                <div class="radio">
                  <label><input type="radio" name="sex" value="L">Laki Laki</label>
                </div>
                <div class="radio">
                  <label><input type="radio" name="sex" value="P">Perempuan</label>
                </div>

                <label for="tahun_masuk">Tahun Masuk</label>
                <input type="number" class="form-control" name="tahun_masuk" min='2017' max="2020">

                <label for="jalur_masuk">Jalur Masuk</label>
                <select class="form-control" id="" name="idJalurMasuk">
                  {{#each jm}}
                    <option value="{{id}}">{{nama_jalurmasuk}}</option>
                  {{/each}}
                </select>

                <label for="idProgramStudi">Program Studi</label>
                <select class="form-control" id="" name="idProgramStudi">
                  {{#each ps}}
                    <option value="{{id}}">{{nama_prodi}}</option>
                  {{/each}}
                </select>
                
                <label for="idDosen">Dosen Pembimbing</label>
                <select class="form-control" id="" name="idDosen">
                  {{#each dosen}}
                    <option value="{{id}}">{{nama}}</option>
                  {{/each}}
                </select>

                <label for="idUser">User</label>
                <select class="form-control" id="" name="idUser">
                  {{#each user}}
                    <option value="{{id}}">{{username}}</option>
                  {{/each}}
                </select>
                <br>
                <input type="submit" name="adduser" class="btn btn-primary pull-right" >
            </form>
        </div>
        <!-- /.box-body-->
      </div>
      <!-- /.box-->
    </div>
  </div>
</section>