<script >
//bar mahasiswa
var mhs = [{{#each mahasiswa}}{{hasil}},{{/each}}];
var tahun = [{{#each mahasiswa}}'{{tahun_masuk}}',{{/each}}];
var nilaimaks = Math.max({{#each mahasiswa}}{{hasil}},{{/each}});

var ctx = document.getElementById("barChart");
var pengaturan = {
  scales: {
    xAxes: [{
      time: {
        unit: 'month'
      },
      gridLines: {
        display: false
      },
      ticks: {
        maxTicksLimit: 6
      }
    }],
    yAxes: [{
      ticks: {
        min: 0,
        max: nilaimaks,
        maxTicksLimit: 5
      },
      gridLines: {
        display: true
      }
    }],
  },
  legend: {
    display: true
  }
};

var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: tahun,
        datasets: [{
            label: 'Data Mahasiswa',
            backgroundColor:'rgba(54, 162, 235, 0.2)',
            data: mhs,  
            //data: [12, 19, 3, 5, 2, 3, 4],  
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
        }]
    },
    options: pengaturan
});

</script>

