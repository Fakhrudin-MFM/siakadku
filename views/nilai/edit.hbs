<section class="content-header">
  <h1>Data Mahasiswa</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>        
    <li class="active">Dashboard</li>
  </ol>
</section>
<!-- Main content-->
<section class="content">
  <!-- Your Page Content Here-->
  <!-- /.row-->
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Halo dunia</h3>
        </div>
        <!-- /.box-header-->
        <div class="box-body">
          <p>Welcome to {{title}}</p>
{{#with nilai}}
            <form class="form-horizontal" action="/nilai/edit/{{id}}?_method=PUT" method="POST">
              <div class="form-group">
                <label for="nidn" class="col-sm-3 control-label">Id</label>
                <div class="col-sm-7">
                  <input type="text" class="form-control" name="id" value="{{id}}">
                </div>
              </div>

              <div class="form-group">
                <label for="nama" class="col-sm-3 control-label">Semester</label>
                <div class="col-sm-7">
                  <input type="text" class="form-control" name="semester" value="{{semester}}">
                </div>
              </div>

              <div class="form-group">
                <label for="gelar" class="col-sm-3 control-label">Nilai</label>
                <div class="col-sm-7">
                  <input type="number" class="form-control" name="nilai" value="{{nilai}}">
                </div>
              </div>

{{/with}}

              <div class="form-group">
                <label for="" class="col-sm-3 control-label">Mahasiswa</label>
                <div class="col-sm-7">
                  <select class="form-control" id="" name="idMahasiswa">
                    {{#each mhs}}
                      <option value="{{id}}">{{nama}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="" class="col-sm-3 control-label">Dosen</label>
                <div class="col-sm-7">
                  <select class="form-control" id="" name="idDosen">
                    {{#each dosen}}
                      <option value="{{id}}">{{nama}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>


              <div class="form-group">
                <label for="tanggal_lahir" class="col-sm-3 control-label">Mata Kuliah</label>
                <div class="col-sm-7">
                  <select class="form-control" id="" name="idMataKuliah">
                    {{#each matkul}}
                      <option value="{{id}}">{{nama_matkul}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-10">
                  <input type="submit" name="save" class="btn btn-primary pull-right" >
                </div>
              </div>
            </form>
        </div>
        <!-- /.box-body-->
      </div>
      <!-- /.box-->
    </div>
  </div>
</section>