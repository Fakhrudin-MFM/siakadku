<section class="content-header">
  <h1>Data User</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>        
    <li class="active">Dashboard</li>
  </ol>
</section>
<!-- Main content-->
<section class="content">
  <!-- Your Page Content Here-->
  <!-- /.row-->
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Data User</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <div class="col-xs-3">
            <a style="cursor:pointer" data-toggle="modal" data-target="#upload">
            {{#with user}}            
              <img src="/uploads/{{#if foto}}{{foto}} {{else}}default.png{{/if}}" class="img-rounded" alt="" width="215" height="217">
            </a>

            <!-- Modal -->
            <div class="modal fade" id="upload" role="dialog">
              <div class="modal-dialog">
              
                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Upload Foto</h4>
                  </div>
                  <div class="modal-body">
                    <form class="form-group" action="/users/upload-foto-profil/{{id}}" method="POST" enctype="multipart/form-data">
                      <input type="file" class="form-control"  name="foto">
                    
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Upload</button>
                    </form>
                  </div>
                </div>                
              </div>
            </div>
          </div>
          <div class="col-xs-5">


          <table id="" class="table table-responsive">
            
            <tr>
              <td>Id</td>
              <td>{{id}}</td>
            </tr>
            <tr>
              <td>Username</td>
              <td>{{username}}</td>
            </tr>
            <tr>
              <td>Email</td>
              <td>{{email}}</td>
            </tr>
          </table>
          <a href="/users/edit/{{username}}" class="btn btn-success">Edit</a>  
          {{/with}}
          </div>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box-->
    </div>
  </div>
</section>
