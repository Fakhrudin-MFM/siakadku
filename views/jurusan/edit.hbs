<section class="content-header">
  <h1>Data Mahasiswa</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>        
    <li class="active">Dashboard</li>
  </ol>
</section>
<!-- Main content-->
<section class="content">
  <!-- Your Page Content Here-->
  <!-- /.row-->
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Halo dunia</h3>
        </div>
        <!-- /.box-header-->
        <div class="box-body">
          <p>Welcome to {{title}}</p>
          {{#with jurusan}}
            <form class="form-horizontal" action="/jurusan/edit/{{id}}?_method=PUT" method="POST">
              <div class="form-group">
                <label for="nidn" class="col-sm-3 control-label">Id</label>
                <div class="col-sm-7">
                  <input type="text" class="form-control" name="id" value="{{id}}">
                </div>
              </div>

              <div class="form-group">
                <label for="nama" class="col-sm-3 control-label">Nama Jurusan</label>
                <div class="col-sm-7">
                  <input type="text" class="form-control" name="nama_jurusan" value="{{nama_jurusan}}">
                </div>
              </div>

              <div class="form-group">
                <label for="gelar" class="col-sm-3 control-label">Akreditasi</label>
                <div class="col-sm-7">
                  <input type="text" class="form-control" name="akreditasi" value="{{akreditasi}}">
                </div>
              </div>

              <div class="form-group">
                <label for="tanggal_lahir" class="col-sm-3 control-label">Tanggal Berdiri</label>
                <div class="col-sm-7">
                  <input type="date" class="form-control" name="tanggal_berdiri" value="{{tanggal_berdiri}}">
                </div>
              </div>

              <div class="form-group">
                <label for="tanggal_lahir" class="col-sm-3 control-label">No SK</label>
                <div class="col-sm-7">
                  <input type="text" class="form-control" name="nosk_pendirian" value="{{nosk_pendirian}}">
                </div>
              </div>

              <div class="form-group">
                <label for="tanggal_lahir" class="col-sm-3 control-label">Email</label>
                <div class="col-sm-7">
                  <input type="email" class="form-control" name="email" value="{{email}}">
                </div>
              </div>  

              <div class="form-group">
                <div class="col-sm-10">
                  <input type="submit" name="save" class="btn btn-primary pull-right" >
                </div>
              </div>
            </form>
        {{/with}}
        </div>
        <!-- /.box-body-->
      </div>
      <!-- /.box-->
    </div>
  </div>
</section>