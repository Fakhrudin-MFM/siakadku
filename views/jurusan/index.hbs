<section class="content-header">
  <h1>Data Mahasiswa</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>        
    <li class="active">Dashboard</li>
  </ol>
</section>
<!-- Main content-->
<section class="content">
  <!-- Your Page Content Here-->
  <!-- /.row-->
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Data Mahasiswa</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <table id="example1" class="table table-bordered table-striped">
            <thead>
            <tr>
              <th>Kode</th>
              <th>Jurusan</th>
              <th>Akreditasi</th>
              <th>Tanggal Pendirian</th>
              <th>No SK Pendirian</th>
              <th>Email</th>
            </tr>   
            </thead>
            <tbody>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
            {{#each jurusan}}
            <tr>
              <td>{{id}}</td>
              <td>{{nama_jurusan}}</td>
              <td>{{akreditasi}}</td>
              <td>{{tanggal_berdiri}}</td>
              <td>{{nosk_pendirian}}</td>
              <td>{{email}}</td>
              <td>
                <a href="/jurusan/edit/{{id}}" class='btn btn-info'>Edit</a>
              </td>
              <td>
                <form action="/jurusan/delete/{{id}}?_method=DELETE" method="POST">
                  <input type="submit" class="btn btn-danger" value="Delete">
                </form>
              </td>
            </tr>
            {{/each}} 
            </tbody>
            <tfoot>
            <tr>
              <th>Kode</th>
              <th>Jurusan</th>
              <th>Akreditasi</th>
              <th>Tanggal Pendirian</th>
              <th>No SK Pendirian</th>
              <th>Email</th>
            </tr>
            </tfoot>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box-->
    </div>
  </div>
</section>
